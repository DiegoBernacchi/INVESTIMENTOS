<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtBarraRisco"
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/txtNomeDoFundo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/value"
            android:textSize="@dimen/lista_text_size"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/txtBarraRisco"
            android:layout_toEndOf="@+id/txtBarraRisco"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txtDivisor"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_toRightOf="@id/txtNomeDoFundo"
            android:layout_toEndOf="@+id/txtNomeDoFundo"
            android:alpha="0.5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtDivisor"
            android:layout_toEndOf="@+id/txtDivisor"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txtAplicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/lista_text_size"
                android:textStyle="bold"
                android:text="@string/label_aplicacao_minima"/>

            <TextView
                android:id="@+id/txtValAplicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAplicacao"
                android:layout_alignLeft="@+id/txtAplicacao"
                android:layout_alignStart="@+id/txtAplicacao"
                android:gravity="center"
                android:textSize="@dimen/lista_text_size"
                android:text="@string/value"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>